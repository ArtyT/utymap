/*** areas ***/
area,relation|z16[leisure] {
    mesh-name: eval("'terrain_leisure_' + tag('leisure')");
}

area,relation|z16[leisure=swimming_pool] {
    terrain-layer: water-generic;
}

area,relation|z16[leisure=park],
area,relation|z16[leisure=recreation_ground] {
    color: #b6fdb6;
}

area,relation|z16[leisure=garden],
area,relation|z16[leisure=common] {
    color: #cfeca8;
}

area,relation|z16[leisure=golf_course] {
    color: #b5e3b5;
}

area,relation|z16[leisure=sports_centre],
area,relation|z16[leisure=stadium] {
    color: #33cc99;
}

area,relation|z16[leisure=track] {
    color: #74dcba;
}

area,relation|z16[leisure=pitch] {
    mesh-name: terrain_leisure_pitch;
    color: #8ad3af;
    z-index: -997;
}

area,relation|z16[leisure=nature_reserve] {
    color: #66cc33;
}

area,relation|z16[leisure=playground] {
    color: #ccfff1;
}

area,relation|z16[leisure=marina] {
    color: blue;
}

